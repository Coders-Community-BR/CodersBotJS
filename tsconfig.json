{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": [
      "ES5",
      "ES2015",
      "ES2021",
      "ESNext",
      "ES2017.Intl",
      "ES2021.Promise",
      "ES2015.Core",
      "WebWorker"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": ["index.ts"],
  "include": [
    "src/**/*.ts",
    "src/config/*.js"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}